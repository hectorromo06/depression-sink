<div>
    <div class="uk-card uk-card-default uk-card-body">
        <figure>
            {{!-- <img src="{{data}}"> --}}
            {{!-- <img src="/images/a1.jpg"> --}}
            <img src="/public/images/ {{ data }}">
        </figure>

        <div>
            <h3 class="uk-card-title"><a href="{{content}}" target="_blank">{{title}}</a></h3>
            <p class="card-text">{{format_url content}}</p>
            <a href="/post/{{id}}">{{post.length}} {{format_plural "like" postes.length}}</a>
            {{vote_count}}
            |
            <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</div>